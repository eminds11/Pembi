<% include ./partials/header %>


<div class = "ui main text container segment">

<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center">Log Your Visit</h1>
        <div style = "width: 30%; margin: 25px auto;">
            <form action = "/logvisit" method = "POST">
                <div class = "form-group">

                    <input class = "form-control" type = "text" name = "name" placeholder = "<%= currentUser.username %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "park" placeholder = "Park ID">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "date" name = "date" placeholder = "Date Visited">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
          <a href = "/">Go Back</a>                
        </div>

    </div>
    
</div>


<% include ./partials/footer %>